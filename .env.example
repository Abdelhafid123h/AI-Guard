# Copy to .env and fill values; .env stays untracked by git

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Backend server
API_HOST=127.0.0.1
API_PORT=8000
SECRET_KEY=

# MySQL
MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=ai_guards
MYSQL_USER=ai_guards
MYSQL_PASSWORD=

# App DB settings (backend reads these)
DB_ENGINE=mysql
DB_HOST=mysql
DB_PORT=3306
# Reuse MySQL creds
DB_USER=${MYSQL_USER}
DB_PASSWORD=${MYSQL_PASSWORD}
DB_NAME=${MYSQL_DATABASE}
DB_SQLITE_FALLBACK=false

# Frontend
REACT_APP_API_URL=http://localhost:8000

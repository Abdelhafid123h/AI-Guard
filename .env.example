# Copy this file to .env and fill secrets locally (never commit .env)

# --- OpenAI ---
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# --- Backend API (optional) ---
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=

# --- Database (MySQL) ---
DB_ENGINE=mysql
DB_HOST=mysql
DB_PORT=3306
DB_SQLITE_FALLBACK=false

# --- PII / NER options ---
# Languages to initialize for Presidio spaCy engine (comma-separated)
PII_PRESIDIO_LANGS=fr,en
# When set to 1/true, relax false-positive filter for PERSON names to improve recall
PII_HIGH_RECALL_PERSON=0

# Provided via compose defaults; override if needed
MYSQL_ROOT_PASSWORD=rootpwd
MYSQL_DATABASE=ai_guards
MYSQL_USER=ai_guards
MYSQL_PASSWORD=ai_guards_pwd

# Map DB_* from MYSQL_*
DB_USER=${MYSQL_USER}
DB_PASSWORD=${MYSQL_PASSWORD}
DB_NAME=${MYSQL_DATABASE}

# --- Frontend ---
REACT_APP_API_URL=http://localhost:8000
